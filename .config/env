#!/usr/bin/env bash

# === Tools ===

export EDITOR=nvim
export MANPAGER="nvim +Man!"
export PAGER=less
export VISUAL=nvim

# GPG doesn't work without this in Termux and Arch Linux
export GPG_TTY=$(tty)

# === Programming ===

# Changes their default location to unbloat the $HOME directory

export CARGO_HOME="$HOME/.cache/cargo/"
export GOBIN="$HOME/dev/go/bin"
export GOPATH="$HOME/dev/go/"
export RUSTUP_HOME="$HOME/.cache/rustup/"

# === PATH Env ===

export PATH="$PATH:$HOME/.local/bin"  # Local Executables
export PATH="$PATH:$HOME/.local/zbin" # Personal Executables

export PATH="$CARGO_HOME/bin/:$PATH"  # Rust
export PATH="/run/wrappers/bin:$PATH" # NixOS
export PATH="$GOBIN:$PATH"            # Golang

# === C Programming ===

export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH

# === Directories Env ===

# Development directory:
# Includes directory named as remote providers. E.g github, codeberg, gitlab
# Each directory includes their repositories
export DEV="$HOME/dev/"

export PASSWORD_STORE_DIR="$HOME/.password-store/" # PasswordStore

# Mirror Env:
# Mirror is an Arch Linux package helper that installs pacman and AUR packages
# based on a configuration file (plaintext)
export MIRROR_DIR=$HOME/dev/github/mirror-config
export GIT_CONFIG_GLOBAL=$HOME/.config/gitconfig
