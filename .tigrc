bind main <Ctrl-P> !git push
bind tree <Ctrl-r> ?sh -c 'echo %(file) >> .gitignore'

color cursor         color99 color234 bold
color search-result  color235 color226
color status         color255   default
color title-focus    color51 color234
color title-blur     color99 color234 bold

set main-view = \
	date:relative-compact \
	author:abbreviated,width=2 \
	id:yes \
	line-number:no \
  commit-title:1,graph=v2,refs=1

set tree-view = \
  date:relative-compact \
  author:abbreviated,width=2 \
  id:no \
  mode:1 \
  file-name:auto \
  file-size:units \
  line-number:0
